<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.com.luizfp.tictactoe.activities.MenuActivity"
    android:background="@drawable/background_menu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/img_board"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="+"
            android:id="@+id/textView"
            android:textColor="@color/white"
            android:textStyle="bold|italic"
            android:textSize="50sp"
            android:layout_marginRight="21dp"
            android:layout_marginEnd="21dp"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_toLeftOf="@+id/imageView2"
            android:layout_toStartOf="@+id/imageView2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@drawable/img_bluetooth_menu"
            android:layout_marginBottom="42dp"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            style="@style/ButtonsMenu"
            android:text="NOVO JOGO"
            android:id="@+id/btnNovoJogo"
            android:layout_marginTop="39dp"
            android:layout_below="@+id/imageView"
            android:layout_alignLeft="@+id/btnVerificaAtivaBt"
            android:layout_alignStart="@+id/btnVerificaAtivaBt" />

        <Button
            style="@style/ButtonsMenu"
            android:text="@string/acao.menu.verifica.ativa.bluetooth"
            android:id="@+id/btnVerificaAtivaBt"
            android:layout_below="@+id/btnNovoJogo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp" />

        <Button
            style="@style/ButtonsMenu"
            android:text="@string/acao.menu.listar.devices.pareados"
            android:id="@+id/btnListaPareados"
            android:layout_below="@+id/btnVerificaAtivaBt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp" />

        <Button
            style="@style/ButtonsMenu"
            android:text="@string/acao.menu.buscar.devices"
            android:id="@+id/btnBuscarDevices"
            android:layout_below="@+id/btnListaPareados"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp" />

        <Button
            style="@style/ButtonsMenu"
            android:text="@string/acao.menu.ficar.visivel.bluetooth"
            android:id="@+id/btnFicarVisivel"
            android:layout_below="@+id/btnBuscarDevices"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp" />

    </RelativeLayout>
</FrameLayout>
