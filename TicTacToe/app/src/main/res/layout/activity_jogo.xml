<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/background_wood">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/tableLayout"
            android:layout_below="@+id/txtResultadoJogo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="32dp">
            <TableRow>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:id="@+id/btnZero"
                    android:layout_weight="1"
                    android:background="#0000"
                    tools:text="X"
                    android:layout_column="0"
                    android:textSize="@dimen/text_size_button_board" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:id="@+id/btnOne"
                    android:layout_weight="1"
                    android:background="@drawable/top_bg_button"
                    android:layout_column="1"
                    android:textSize="@dimen/text_size_button_board" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:id="@+id/btnTwo"
                    android:layout_weight="1"
                    android:background="#0000"
                    android:layout_column="20"
                    android:textSize="@dimen/text_size_button_board"
                    tools:text="O" />
            </TableRow>
            <TableRow>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:id="@+id/btnThree"
                    android:layout_weight="1"
                    android:background="@drawable/left_bg_button"
                    android:layout_column="0"
                    android:textSize="@dimen/text_size_button_board"
                    tools:text="O" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:id="@+id/btnFour"
                    android:layout_weight="1"
                    android:background="@drawable/central_bg_button"
                    tools:text="X"
                    android:layout_column="1"
                    android:textSize="@dimen/text_size_button_board" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:id="@+id/btnFive"
                    android:layout_weight="1"
                    android:background="@drawable/right_bg_button"
                    android:layout_column="2"
                    android:textSize="@dimen/text_size_button_board" />
            </TableRow>
            <TableRow>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:id="@+id/btnSix"
                    android:layout_weight="1"
                    android:background="#0000"
                    android:layout_column="0"
                    android:textSize="@dimen/text_size_button_board"
                    tools:text="O" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:id="@+id/btnSeven"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_bg_button"
                    android:layout_column="1"
                    android:textSize="@dimen/text_size_button_board" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:id="@+id/btnEight"
                    android:layout_weight="1"
                    android:background="#0000"
                    tools:text="X"
                    android:layout_column="2"
                    android:textSize="@dimen/text_size_button_board" />
            </TableRow>
        </TableLayout>

        <TextView
            tools:text="X venceu!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txtResultadoJogo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="@dimen/button_width_large"
            android:layout_height="wrap_content"
            android:id="@+id/btnReiniciar"
            android:background="@drawable/button_rounded_black"
            android:text="@string/acao.jogo.reiniciar"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</FrameLayout>
